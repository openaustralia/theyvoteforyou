- content_for :title, "Log in"

.thin-page
  %h1.long-title= yield :title

  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f|
    = f.error_notification

    .form-group= f.input :email, as: :email, autofocus: true
    .form-group= f.input :password

    - if devise_mapping.rememberable?
      .checkbox
        %label
          = f.check_box :remember_me
          Remember me

    = f.submit "Log in", class: "btn btn-primary btn-wide"

  %ul.form-secondary.nav.nav-pills
    %li= link_to "Sign up for a new account", new_registration_path(resource_name), class: "btn-xs"
    %li= link_to "Forgotten your password?", new_password_path(resource_name), class: "btn-xs"
    %li= link_to "Resend confirmation", new_user_confirmation_path, class: "btn-xs"
