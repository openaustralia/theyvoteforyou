- unless members.empty?
  .policy-comparision-block.row{class: "position-#{title.parameterize}"}
    %h3.policy-comparision-position.col-xs-12
      = title
      = policy.name
    %ul.policy-comparision-list.list-unstyled.col-xs-12
      - members.each do |member|
        %li.policy-comparision-member.member-item
          = link_to [member, policy], class: 'policy-comparision-member member-link has-tooltip', title: member.name do
            = image_tag(member.large_image_url, alt: "Photo of #{member.name_without_title}", class: 'member-photo', width: 85, height: 114)
            %span.member-name.sr-only= member.name
    =link_to "Something not right?", help_faq_path(anchor: 'stance'), title: "Is this information inaccurate? Find out how to improve it.", class: 'policy-correction-notice small'
