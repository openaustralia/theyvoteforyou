- content_for :title do
  = policy_agreement_summary(@policy_person_distance, with_person: true)
  = @policy.name
- set_meta_tags description: "How #{@member.name} voted in parliament on #{@policy.name}."
:ruby
  set_meta_tags og: {
    title: "#{policy_agreement_summary(@policy_person_distance, with_person: true)} #{@policy.name}.",
    description: "Discover how #{@member.name} voted on #{@policy.name}.",
    type: "profile",
    url: request.original_url,
    image: {
      _: @member.large_image_url,
      alt: "Photo of #{@member.name}",
      width: @member.large_image_width,
      height: @member.large_image_height
    },
    site_name: Settings.project_name
  }
  set_meta_tags twitter: {
    card: "summary",
    site: "@" + Settings.project_twitter,
    image: {
      _: @member.large_image_url,
      alt: "Photo of #{@member.name}",
    },
    title: "#{policy_agreement_summary(@policy_person_distance, with_person: true)} #{@policy.name}.",
    description: "Discover how #{@member.name} voted on #{@policy.name}."
  }
.page-header.row
  .col-md-9.col-lg-10
    .media
      - if @member.show_large_image?
        = link_to member_path_simple(@member), class: "pull-left" do
          = image_tag(@member.large_image_url, alt: "Photo of #{@member.name}", size: @member.large_image_size, class: "media-object")
      .media-body
        %h1.media-heading.long-title
          = link_to @member.name, member_path_simple(@member)
          = policy_agreement_summary(@policy_person_distance)
          = link_to @policy.name, @policy
  .header-secondary.col-sm-12
    -# We don't want people sharing incomplete policies
    - if @policy.published?
      = render "social_share"

= render "policies/draft_warning", policy: @policy

%p.col-sm-7.remove-padding
  How
  = link_to @member.name, member_path_simple(@member)
  voted compared to someone who believes that
  = link_to @policy.description, @policy

= render 'policies/vote_summary_table', person: @member.person, policy: @policy
= render "policies/how_the_number_is_calculated", policy_person_distance: @policy_person_distance
