- content_for :header do
  .site-introduction.banner-section.jumbotron
    %h1.banner-heading
      How does your MP vote on the issues that matter to you?

    .banner-action
      %form{action: search_path, method: "get", name: "pw"}
        %label{for: "query"}
          Find your representative by
          %strong postcode
          or
          %strong name
        .input-group
          %input.form-control#query{maxlength: "256", name: "query", type: "search", placeholder: "e.g. #{Member.random_postcode} or #{Member.random_current.name_without_title}", list: "members-datalist"}
          %span.input-group-btn
            %button.btn.btn-primary{name: "button", type: "submit", value: "hero_search"} Search
        %datalist#members-datalist
          - @current_members.each do |member|
            %option{value: member.name_without_title}

.front-panels-block.banner-section
  .container
    .front-panel.col-md-4
      = render "panel1"
    .front-panel.col-md-4
      = render "panel2"
    .front-panel.col-md-4
      = render "panel3"

.supporting-orgs-block.banner-section.wide-section
  = render "supporting_orgs"

.front-quote-block.banner-section
  .container
    = render "quote"

:javascript
  input = document.querySelectorAll('.form-control#query')[1]
  vals = ['e.g. Senate for Tasmania', 'e.g. Senate for NSW']
  index = 0
  
  current_placeholder = input.getAttribute('placeholder')
  vals.push(current_placeholder)
  
  setInterval(updatePlaceholder, 2500);

  function updatePlaceholder() {
    input.setAttribute('placeholder', vals[index % vals.length])
    index++
  }