%li.dropdown
  %a.dropdown-toggle(href="#" data-toggle="dropdown")
    = current_user.name
  %ul.dropdown-menu(role="menu")
    %li= link_to "Your page", current_user
    %li= link_to "Your subscriptions", user_subscriptions_path(current_user)
    %li= link_to "Edit profile", edit_user_registration_path
    - if current_user.admin?
      %li.divider
      %li= link_to "Admin panel", admin_root_path
      %li= link_to "Admin for feature flags", admin_flipper_path
    %li.divider
    %li= link_to "Logout", destroy_user_session_path, title: "Make your browser forget that you are logged into #{Rails.configuration.project_name} as #{current_user.name}", method: :delete
