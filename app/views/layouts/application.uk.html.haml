!!! 5
%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    - if Settings.facebook_admins
      - Settings.facebook_admins.each do |admin_id|
        %meta(property="fb:admins" content="#{admin_id}")
    %title
      - if content_for? :title
        = yield :title
        = "— #{Settings.project_name}"
      - else
        #{Settings.project_name} — Як Голосує Твій Депутат?

    = stylesheet_link_tag "//code.cdn.mozilla.net/fonts/fira.css"
    = stylesheet_link_tag "application"

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    = csrf_meta_tag
    = display_meta_tags
  %body{class: "#{body_class}"}
    %nav.site-header.navbar(role="navigation")
      - # Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
          %span.sr-only Розгорнути меню
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to Settings.project_name, root_path, class: "navbar-brand"

      - # Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        %ul.nav.navbar-nav
          %li= link_to "Депутати", members_path, class: 'navlink-members', title: "Усі чинні депутати у Парламенті"
          %li= link_to "Політики", policies_path, class: 'navlink-policies', title: "За що депутати голосують"
          %li= link_to "Голосування", divisions_path, class: 'navlink-divisions', title: "Перелік голосувань у Парламенті"
          %li= link_to "Про проект", about_path, class: 'navlink-about', title: "Інформація про сайт"

        = form_tag search_path, method: "get", name: "pw", role: "search", class: "site-header-search navbar-form navbar-right" do
          .input-group
            = label_tag :query, "Пошук #{Settings.project_name}", class: 'sr-only'
            = search_field_tag :query, nil, maxlength: "256", name: "query", type: "search", placeholder: "Пошук", class: "form-control input-sm"
            .input-group-btn
              = button_tag value: 'Submit', class: 'btn btn-default input-sm' do
                %span.sr-only
                  Відправити
                %span.glyphicon.glyphicon-search

        - if user_signed_in?
          %ul.account-nav.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle(href="#" data-toggle="dropdown")
                  = current_user.name || current_user.email
                %ul.dropdown-menu(role="menu")
                  %li= link_to "Your page", current_user
                  %li= link_to "Your subscriptions", user_subscriptions_path(current_user)
                  %li= link_to "Edit profile", edit_user_registration_path
                  %li.divider
                  %li= link_to "Logout", destroy_user_session_path, title: "Make your browser forget that you are logged into #{Settings.project_name} as #{current_user.name || current_user.email}", method: :delete
            - else
              %li= link_to "Log in", new_user_session_path, title: "Log in to your account"
              -if !current_page?(new_user_registration_path)
                %li= link_to "Sign up", new_user_registration_path, title: "Create an account to help improve this resource", class: "link-signup"

    = render "layouts/bootstrap_flash"
    = yield :history_notice
    = yield :header

    - if current_page?(controller: '/home', action: 'index')
      = yield
    - else
      .container.main-content= yield

    = render "footer"
    = render "google_analytics"
    = javascript_include_tag "application"
