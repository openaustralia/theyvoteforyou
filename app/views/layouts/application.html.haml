!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title
      - unless yield(:title).empty?
        = yield :title
        \— The Public Whip
      - else
        The Public Whip — Counting votes on your behalf

    = stylesheet_link_tag "//code.cdn.mozilla.net/fonts/fira.css"
    = stylesheet_link_tag "application"

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    = csrf_meta_tag
  %body{class: "#{body_class}"}
    %nav.site-header.navbar(role="navigation")
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to root_path, class: "navbar-brand" do
          the public whip

      // Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        %ul.nav.navbar-nav
          %li= link_to "People", members_path, class: 'navlink-members', title: "All people currently in Federal Parliament"
          %li= link_to "Policies", policies_path, class: 'navlink-policies', title: "Help to analyze MP's votes"
          %li= link_to "Divisions", divisions_path, class: 'navlink-divisions', title: "List of all votes in Parliament"
          %li= link_to "About", about_path, class: 'navlink-about', title: "Information about this website"

        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle(href="#" data-toggle="dropdown")
                = current_user.name || current_user.email
              %ul.dropdown-menu(role="menu")
                %li= link_to "Your page", current_user
                %li= link_to "Edit profile", edit_user_registration_path
                %li.divider
                %li= link_to "Logout", destroy_user_session_path, title: "Make your browser forget that you are logged into The Public Whip as #{current_user.name || current_user.email}", method: :delete
          - else
            %li= link_to "Login", new_user_session_path, title: "Login to edit policies"

        %form{class: "navbar-form navbar-right", action: search_path, method: "get", name: "pw", role: "search"}
          .input-group
            %label.sr-only{for: "query"}
              Search the Public Whip
            %input.form-control.input-sm{maxlength: "256", name: "query", type: "search", placeholder: "Search"}
            .input-group-btn
              %button.btn.btn-default.input-sm{type: "submit", value: "Submit"}
                %span.sr-only
                  Submit
                %span.glyphicon.glyphicon-search

    = render "layouts/bootstrap_flash"
    = yield :history_notice
    = yield :header

    .container
      = yield
    %footer.site-footer
      .container
        .row
          %p.footer-msg.col-md-8
            An
            =link_to "OpenAustralia Foundation", "http://www.openaustraliafoundation.org.au/"
            project.
            =# link_to "More projects", "https://www.openaustraliafoundation.org.au/projects/", class: "text-mute small btn-link"


          %ul.social-nav.nav.nav-pills.col-md-4
            %li.twitter= link_to "Twitter", "http://twitter.com/openaustralia"
            %li.blog= link_to "Blog", "https://www.openaustraliafoundation.org.au/blog/"
            %li.email= mail_to "contact@openaustraliafoundation.org.au", "Contact"
            %li.help= link_to "Help / FAQ", help_faq_path()

        .row#oaf-projects
          %p.col-md-12
            Explore our other projects:
            #{link_to "OpenAustralia.org", "http://www.openaustralia.org"},
            #{link_to "Election Leaflets", "http://www.electionleaflets.org.au"},
            #{link_to "Right To Know", "http://www.righttoknow.org.au"} and
            #{link_to "PlanningAlerts", "http://www.planningalerts.org.au"}.

    = render "google_analytics"
    = javascript_include_tag "application"
