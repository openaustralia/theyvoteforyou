%ul.row.list-unstyled
  - history.each do |version|
    %li.object-item
      - if version.kind_of?(WikiMotion)
        %p
          Changed text on
          = link_to version.division.name, division_path_simple(version.division)

      - else
        - if !policy
          %p.change-policy-name
            On policy
            = link_to version_policy(version).name, version_policy(version)

        = version_sentence(version)

      %p.small.object-primary.text-muted
        = name_with_badge(version_author(version))
        = time_ago_in_words(version.created_at)
        ago
