.history-notice
  %p.container
    -if @division
      = link_to "Division last edited #{relative_time @division.last_edited_at}", history_division_path(@division), title: "View the edit history of this division."
    -elsif @policy
      = link_to "Policy last edited #{time_ago_in_words(@policy.last_edited_at)} ago", history_policy_path(@policy), title: "View the edit history of this policy."
    by
    -if @division
      = link_to @division.last_edited_by.name, @division.last_edited_by
    -elsif @policy
      = link_to @policy.last_edited_by.name, @policy.last_edited_by
